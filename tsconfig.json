{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext", "es6"]
  },
  "include": ["src/**/*.ts"]
}
